<%include partials/header%>
<div class="container">
    
    <h1 style="text-align: center; margin: 15px auto; ">Add a new Campground!!</h1>
    <div class="row"></div>
        <div class="ui form" style="width: 30%; margin: 0 auto;">
            <form action="/campgrounds" method="POST">
                <div class="field">
                    <label>Camp Name</label>
                    <input class="form-control" type="text" name="camp[name]"  placeholder="Enter Camp Name">
                </div>
                <div class="field">
                    <label>Image Link</label>
                    <input class="form-control" type="text" name="camp[image]"  placeholder="Enter Image URL">
                </div>
                <div class="field">
                    <label>Description</label>
                    <textarea name="camp[description]" placeholder="Enter Description"></textarea>
                </div>
                <div class="field">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/campgrounds">Go Back</a>
        </div>
        
        
    </div>
    
</div>



<%include partials/footer%>