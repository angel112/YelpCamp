<%include partials/header%>


<div class="container" style="margin-top: 15px; font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif">
    <header class="jumbotron">
        <div class="container">
            <h1 style="font-weight: bold">Welcome to YelpCamp!!</h1>
            <p>View our Hand-picked Campground from all over the world!!</p>
            <p>
                <a class="btn btn-primary btn-lg"href="/campgrounds/new">Add a new Camp!</a>
            </p>
        </div>
    </header>

    <div class="row text-center" style="display: flex; flex-wrap: wrap;">
        <% campgrounds.forEach(function(campground){  %>
            <div class="col-md-3 col-sm-4">
                <div class="img-thumbnail"> 
                    <img src="<%= campground.image %>" class="img-fluid">
                    <div class="caption">
                        <h4 style="font-size: medium; color: blanchedalmond"><%= campground.name %></h4>
                    </div>
                    <a class="btn btn-primary" href="/campgrounds/<%= campground._id %>">READ MORE</a>
                </div> 
            </div>
        <% }); %>
    </div>
</div>

<%include partials/footer%>