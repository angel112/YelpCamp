<% include ./partials/header %>

<div class="container">
    <div class="row">
        <div class="col-md-3">
            <p class="lead">YelpCamp</p>
            <div class="list-group">
                <li class="list-group-item active">Info 1</li>
                <li class="list-group-item">Info 2</li>
                <li class="list-group-item">Info 3</li>
            </div>
        </div>
        <div class="col-md-9">
            <div class="img-thumbnail">
                <img class="image-responsive" src="<%= camp.image %>">
            </div>
            <div style="margin: 7px auto" class="ui piled segment">
                <div class="row">
                    <div class="col-md-3">
                        <h2 class="ui aligned center icon header">
                            <i class="tree icon"></i><%= camp.name %>
                        </h2>
                    </div>
                    <div class="col-md-9">
                            <p><%= camp.description %></p>
                            <h4 style="float: right">9.00$/night</h4>
                    </div>
                </div>
            </div>
            <div style="margin: 10px auto" class="ui piled segment">
                <div class="row">
                    <div class="col-md-8">
                        <h2>Comments</h2>
                    </div>
                    <div class="col-md-4">
                        <a class="btn btn-lg btn-success" href="/campgrounds/<%= camp._id %>/comment">Leave a Review</a>
                    </div>
                </div>
                <hr>
                
                <% camp.comments.forEach(function(comment){ %>
                    <div class="block">
                        <strong><%= comment.author.username %></strong>
                        <span style="float: right">10 days ago</span>
                        <p><%= comment.content %></p>                
                        <hr>
                    </div>
                    
                <% }) %>
                
            </div>
        </div>
    </div>
    
    

    
    
</div>



<% include ./partials/footer %>