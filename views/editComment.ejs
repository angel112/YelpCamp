<%include partials/header%>
<div class="container">
    
    <h1 style="text-align: center; margin: 15px auto; ">Edit Comment</h1>
    <div class="row"></div>
        <div class="ui form" style="width: 30%; margin: 0 auto;">
            <form action="/campgrounds/<%= camp_id %>/comment/<%= comment._id %>?_method=PUT" method="POST">
                <div class="field">
                    <label>Comment</label>
                    <input class="form-control" type="text" name="comment[content]"  value="<%= comment.content %>">
                </div>
                <div class="field">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/campgrounds/<%= camp_id %>">Go Back</a>
        </div>
        
        
    </div>
    
</div>



<%include partials/footer%>