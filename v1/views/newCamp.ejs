<%include partials/header%>
<div class="container">
    
    <h1 style="text-align: center; margin: 15px auto; ">Add a new Campground!!</h1>
    <div class="row"></div>
        <div style="width: 30%; margin: 0 auto;">
            <form action="/campgrounds" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="name"  placeholder="Enter Camp Name">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="image"  placeholder="Enter Image URL">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/campgrounds">Go Back</a>
        </div>
        
        
    </div>
    
</div>



<%include partials/footer%>